@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Your Password?";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 p-4 d-flex justify-content-center">
                            <img src= "~/img/logo-no-background_600x600.png" class="img-fluid" style="height: 450px !important; width:450px !important" align="center"/>
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">@ViewData["Title"]</h1>
                                    <p class="mb-4">
                                        We get it, stuff happens. Just enter your email address below
                                        and we'll send you a link to reset your password!
                                    </p>
                                </div>
                                <form class="user" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <input asp-for="Input.Email" class="form-control form-control-user"
                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                               placeholder="Enter Email Address..." autocomplete="username" aria-required="true">
                                        <label asp-for="Input.Email" class="form-label"></label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Reset Password
                                    </button>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a asp-area="Identity" asp-page="/Account/Register">Create an Account!</a>
                                    
                                </div>
                                <div class="text-center">
                                    <a asp-area="Identity" asp-page="/Account/Login">Already have an account? Login!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>


