@model AS.DATA.EF.Models.Sale

@{
    ViewData["Title"] = "Details " + Model.Customer.CustomerName;
}

<h1 style="margin-left: 1.5em;">@ViewData["Title"]</h1>


<div>
    @*<h4>Sale</h4>*@
    <hr />
    <dl class="row" style="margin-left: 3em;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SaleDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SaleDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SaleTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SaleTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salesperson)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salesperson.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SaleId" style="margin-left: 3.5em;" class="btn btn-primary">Edit</a> 
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
