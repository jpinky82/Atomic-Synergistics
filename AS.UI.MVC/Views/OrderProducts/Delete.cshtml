@model AS.DATA.EF.Models.OrderProduct

@{
    ViewData["Title"] = "Delete " + Model.OrderId;
}

<h1 style="margin-left: 1.5em;">@ViewData["Title"]</h1>


<h3 style="margin-left: 2.2em;">Are you sure you want to delete @Model.OrderId?</h3>
<div>
    @*<h4>OrderProduct</h4>*@
    <hr />
    <dl class="row" style="margin-left: 3em;">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderQuantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" style="margin-left: 3.5em" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
