@model AS.DATA.EF.Models.SaleProduct

@{
    ViewData["Title"] = "Edit " + Model.ProductId;
}

<h1 style="margin-left: 1.5em;">@ViewData["Title"]</h1>


@*<h4>SaleProduct</h4>*@
<hr />
<div class="row" style="margin-left: 3em;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SaleProductId" />
            <div class="form-group">
                <label asp-for="SaleId" class="control-label"></label>
                <select asp-for="SaleId" class="form-control" asp-items="ViewBag.SaleId"></select>
                <span asp-validation-for="SaleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaleQuantity" class="control-label"></label>
                <input asp-for="SaleQuantity" class="form-control" />
                <span asp-validation-for="SaleQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="margin-left: 3.5em;" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
